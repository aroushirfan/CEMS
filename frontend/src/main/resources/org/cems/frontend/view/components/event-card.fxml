<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox prefWidth="220.0" spacing="0.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 15; -fx-overflow: hidden;"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cems.frontend.controllers.components.EventCardController">

    <StackPane prefHeight="120.0" style="-fx-background-color: #E6E1FF; -fx-background-radius: 15 15 0 0;">
        <children>
        </children>
    </StackPane>

    <VBox spacing="5.0" style="-fx-padding: 10;">
        <Label fx:id="titleLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" text="Career Fair 2026" />
        <Label fx:id="dateTimeLabel" style="-fx-font-size: 11;" text="February 10, 2026 . 12:00 - 16:00" />
        <Label fx:id="locationLabel" style="-fx-font-size: 11;" text="Auditorium" />
        <Label fx:id="spotsLabel" style="-fx-font-size: 11;" text="55 spots left(145/200)" />

        <Region prefHeight="5.0" />

        <Button fx:id="learnMoreButton" maxWidth="Infinity" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Learn More" />
    </VBox>
</VBox>